<Window x:Class="BooleanOperation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooleanOperation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="150"/>            
        </Grid.ColumnDefinitions>
        <ContentControl x:Name="ViewPanel" />
        <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="10">
            <Button Content="Model" Click="BoolOperation_ButtonClick"/>
            <Button Content="Union" Click="BoolOperation_ButtonClick"/>
            <Button Content="Difference" Click="BoolOperation_ButtonClick"/>
            <Button Content="Intersection" Click="BoolOperation_ButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
